<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"

    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/homeresim"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"></ImageView>

        <TextView
            android:id="@+id/hometeamisim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:text="İstanbul Başakşehir"
            android:visibility="gone">

        </TextView>

        <ImageView
            android:id="@+id/awayresim"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"></ImageView>

        <TextView
            android:id="@+id/awayteamisim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="20dp"
            android:text="İstanbul Başakşehir"
            android:visibility="gone" />

        <TextView
            android:id="@+id/matchdetailstarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="15 Mart 2022|19.00" />

        <TextView
            android:id="@+id/matchdetailsms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:layout_centerVertical="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:text="2-0" />

        <TextView
            android:id="@+id/matchdetailstahmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="340dp"
            android:textColor="@color/white"

            android:layout_marginTop="20dp"
            android:text="2-0" />

        <TextView
            android:id="@+id/matchdetailspuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"

            android:layout_marginLeft="380dp"
            android:layout_marginTop="20dp"
            android:text="2-0" />

        <TextView
            android:id="@+id/matchdetailsweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="26. Hafta" />
    </RelativeLayout>

</RelativeLayout>