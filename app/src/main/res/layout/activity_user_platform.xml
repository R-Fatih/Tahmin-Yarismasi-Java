<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa2"
    tools:context=".UserPlatform">

    <TextView
        android:id="@+id/textviewmerhaba"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:text="Merhaba:" />

    <ImageView
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/matches"
        android:layout_marginTop="30dp"
        android:text="Haftanın maçları" />

    <ImageView
        android:id="@+id/button4"
        android:background="@drawable/standings"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="100dp"
        android:text="Yarışma Puan Durumu" />
    <ImageView
        android:id="@+id/button5"
        android:background="@drawable/stsl"
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Stsl Puan Durumu" />
    <ImageView
        android:id="@+id/button7"
        android:background="@drawable/statics"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="İstatistikler"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/button6"
        android:background="@drawable/settings"
        android:layout_marginTop="310dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Kullanıcı Ayarları" />
    <ImageView
        android:id="@+id/button8"
        android:background="@drawable/rules"
        android:layout_marginTop="380dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Kullanıcı Ayarları" />
</RelativeLayout>